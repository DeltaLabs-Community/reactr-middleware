{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
  },
  "exclude": ["examples/**/*", "node_modules", "tests/**/*", "dist", "vitest.config.ts", "site/**/*", "docs/**/*", "*.md"]
}
